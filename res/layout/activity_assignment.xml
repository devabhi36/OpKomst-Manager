<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.AssignmentActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/bar_layout"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="15dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/view_given_assignment"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="15dp"
                    android:text="VIEW GIVEN ASSIGNMENT"
                    android:background="@drawable/buttonbackground"
                    android:textAllCaps="true"
                    android:textAppearance="@style/StudentProfileText"
                    android:textColor="#fff"
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/submit_assignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="150dp"
                    android:text="SUBMIT SOLUTION"
                    android:background="@drawable/submit_assignment_buttonbackground"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/StudentProfileText"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/view_submitted_assignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:text="VIEW SUBMITTED SOLUTION"
                    android:background="@drawable/buttonbackground"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/StudentProfileText"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/unSubmit_assignment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="20dp"
                    android:text="UN-SUBMIT SOLUTION"
                    android:background="@drawable/unsubmit_assignment_buttonbackground"
                    android:layout_gravity="center"
                    android:textAllCaps="true"
                    android:textAppearance="@style/StudentProfileText"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>