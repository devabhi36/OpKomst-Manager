<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:id="@+id/chat_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_left">
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sameeksha Tandon"
            android:textColor="#FF6347"
            android:textStyle="bold"
            android:textSize="14dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:fontFamily="@font/barlow_r"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:paddingTop="6dp"
            android:paddingLeft="8dp"
            android:paddingBottom="8dp"
            android:text="Abhinay Shrivastav (1605213003)"
            android:autoLink="all"
            android:textColorLink="@color/colorPrimaryDark"
            android:textColor="#111111"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/time"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:text="12:27 PM"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/message" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_msg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/chat_left"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/imageview_background"
        android:layout_alignParentLeft="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:text="12:27 PM"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/image_msg"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/image_msg"
        android:visibility="gone"/>

</RelativeLayout>